<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mathOperation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="35sp"
        android:ellipsize="start"
        android:paddingRight="10dp"
        android:gravity="end"
        android:text=""
        android:textColor="@color/colorTextEnter"
        android:singleLine="true" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textSize="30sp"
        android:ellipsize="start"
        android:paddingRight="10dp"
        android:gravity="end"
        android:text=""
        android:textColor="@color/colorTextEnter"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                style="@style/actionButton"
                android:id="@+id/btn_ac"
                android:text="AC"
                android:textSize="35dp"
                />
            <TextView
                style="@style/calculateButton"
                android:id="@+id/btn_lefts"
                android:text="("
                android:textSize="36dp"/>
            <TextView
                style="@style/actionButton"
                android:id="@+id/btn_rights"
                android:text=")"
                android:textSize="36dp"/>
            <TextView
                style="@style/calculateButton"
                android:id="@+id/btn_umnoz"
                android:text="ร"
                android:textSize="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                style="@style/numberButton"
                android:id="@+id/btn_1"
                android:text="1"
                android:textSize="40dp"/>
            <TextView
                style="@style/numberButton"
                android:id="@+id/btn_2"
                android:text="2"
                android:textSize="40dp"/>
            <TextView
                style="@style/numberButton"
                android:id="@+id/btn_3"
                android:text="3"
                android:textSize="40dp"/>
            <TextView
                style="@style/actionButton"
                android:id="@+id/btn_div"
                android:text="รท"
                android:textSize="45dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                style="@style/numberButton"
                android:id="@+id/btn_4"
                android:text="4"
                android:textSize="40dp"/>
            <TextView
                style="@style/numberButton"
                android:id="@+id/btn_5"
                android:text="5"
                android:textSize="40dp"/>
            <TextView
                style="@style/numberButton"
                android:id="@+id/btn_6"
                android:text="6"
                android:textSize="40dp"/>
            <TextView
                style="@style/actionButton"
                android:id="@+id/btn_plus"
                android:text="+"
                android:textSize="45dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                style="@style/numberButton"
                android:id="@+id/btn_7"
                android:text="7"
                android:textSize="40dp"/>
            <TextView
                style="@style/numberButton"
                android:id="@+id/btn_8"
                android:text="8"
                android:textSize="40dp"/>
            <TextView
                style="@style/numberButton"
                android:id="@+id/btn_9"
                android:text="9"
                android:textSize="40dp"/>
            <TextView
                style="@style/actionButton"
                android:id="@+id/btn_minus"
                android:text="-"
                android:textSize="55dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                style="@style/numberButton"
                android:id="@+id/btn_back"
                android:text="C"
                android:textSize="38dp"/>
            <TextView
                style="@style/numberButton"
                android:text="0"
                android:id="@+id/btn_0"
                android:textSize="40dp"/>
            <TextView
                style="@style/numberButton"
                android:id="@+id/btn_zap"
                android:text=","
                android:textSize="45dp"/>
            <TextView
                style="@style/actionButton"
                android:id="@+id/btn_equals"
                android:text="="
                android:textSize="45dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>